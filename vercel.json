{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/extension",
      "dest": "/api/extension.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/extension.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "GEMINI_API_KEY_1": "@gemini_api_key_1",
    "GEMINI_API_KEY_2": "@gemini_api_key_2"
  }
}